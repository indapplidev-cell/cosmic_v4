#:import dp kivy.metrics.dp
#:import t manager.lang.lang_manager.t

<RewardedAdModal>:
    background: ""
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.85
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(12), dp(12), dp(12), dp(12)]
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(48)
            Widget:
            MDIconButton:
                id: close_btn
                icon: "close"
                opacity: 0
                disabled: True
                on_release: root._on_close_pressed()
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            MDLabel:
                halign: "center"
                valign: "middle"
                text_size: self.size
                text: t("ads.rewarded.placeholder")
